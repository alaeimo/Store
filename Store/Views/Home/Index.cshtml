@section Scripts{
    <script>
        $(function () {
            $("button.btn-primary").click(function (e) {
                e.preventDefault();
                var productId = $(this).attr("product");
                $.ajax({
                    url: "/Home/AddToCart",
                    data: { Id: productId, Count: 1 },
                    type: "Post",
                    dataType: "Json",
                    success: function (result) {
                        if (result.Success) {
                            $("#CartItems").html(result.Html);
                        }
                        eval(result.Script);
                    },
                    error: function () {
                        alert("خطا!");
                    }
                });
            });
        });
    </script>
